<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="#2C2F4A"/>

    <!-- Sudut membulat -->
    <corners android:radius="12dp"/>

    <!-- Garis border -->
    <stroke
        android:width="1dp"
        android:color="#80FFFFFF"/>

    <!-- Padding dalam -->
    <padding
        android:left="12dp"
        android:top="10dp"
        android:right="12dp"
        android:bottom="10dp"/>
</shape>
