<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Lingkaran luar (ring putih) -->
    <item>
        <shape android:shape="oval">
            <size
                android:width="72dp"
                android:height="72dp" />
            <solid android:color="#FDCF00"/>
        </shape>
    </item>

    <!-- Lingkaran dalam (kuning cahaya bulan) -->
    <item
        android:top="6dp"
        android:bottom="6dp"
        android:left="6dp"
        android:right="6dp">

        <shape android:shape="oval">
            <solid android:color="#FFFFFF"/>
        </shape>

    </item>

</layer-list>
