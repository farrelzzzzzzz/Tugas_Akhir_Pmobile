<shape xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- BEVEL PUTIH (atas sedikit lebih terang) -->
    <gradient
        android:type="linear"
        android:angle="270"
        android:startColor="#ffff"
        android:centerColor="#ffff"
        android:endColor="#ffff"/>

    <!-- SUDUT ROUNDED (TIDAK SIKU) -->
    <corners android:radius="14dp"/>

    <!-- STROKE TIPIS ABU PUTIH -->
    <stroke
        android:width="1dp"
        android:color="#D0D0D0"/>

</shape>
