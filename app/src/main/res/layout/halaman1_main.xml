<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_all">

    <!-- Container utama -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Judul / Logo -->
        <TextView
            android:id="@+id/tvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:layout_marginStart="72dp"
            android:layout_marginBottom="60dp"
            android:text="Gambar\nLogo?"
            android:textColor="#FFFFFF"
            android:textSize="64sp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="53dp"
            android:layout_marginBottom="50dp"
            android:text="Momen Kecil, Rasa Besar."
            android:textColor="#FDCF00"
            android:textSize="40sp" />

        <!-- Deskripsi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginBottom="50dp">

            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:text="Tidak semua momen perlu dibagikan ke semua orang. Bagikan momen untuk orang-orang yang benar-benar berarti."
                android:textColor="#F5E6A1"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Spacer agar tombol tetap di bawah -->
        <View
            android:layout_width="match_parent"
            android:layout_height="82dp"
            android:layout_weight="1" />

        <!-- Button Start -->
        <LinearLayout
            android:id="@+id/btnStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="48dp"
            android:background="@drawable/tombol"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="49dp"
            android:paddingVertical="11dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textColor="@color/black"
                android:textSize="28sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
