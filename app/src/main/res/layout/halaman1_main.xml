<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_all">

    <!-- ================= KONTEN UTAMA ================= -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Spacer atas (atur posisi konten utama) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.35" />

        <!-- Konten tengah -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="24dp">

            <!-- Logo / Judul -->
            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="320dp"
                android:layout_height="320dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/gambar_halaman1"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true" />

            <!-- Subtitle -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Momen Kecil, Rasa Besar."
                android:textStyle="bold"
                android:textColor="#FDCF00"
                android:textSize="28sp"
                android:layout_marginBottom="18dp" />

            <!-- Deskripsi -->
            <TextView
                android:id="@+id/tvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tidak semua momen perlu dibagikan ke semua orang. Bagikan momen untuk orang-orang yang benar-benar berarti."
                android:textColor="#F5E6A1"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Spacer bawah -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!-- ================= TOMBOL START (FIXED POSITION) ================= -->
    <LinearLayout
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="24dp"
        android:background="@drawable/tombol"
        android:paddingHorizontal="48dp"
        android:paddingVertical="12dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Memulai"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="24sp" />
    </LinearLayout>

</FrameLayout>
